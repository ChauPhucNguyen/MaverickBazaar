<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exchanges">

    <TextView
        android:id="@+id/exchangesMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Exchanges Main Menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#001AFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/makeExchangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Exchanges"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"

        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/filterExchangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Exchanges"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        tools:layout_editor_absoluteY="238dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
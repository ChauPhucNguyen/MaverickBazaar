<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".orderHistoryList">

    <ImageView
        android:id="@+id/orderImgLayout"
        android:layout_width="160dp"
        android:layout_height="145dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/orderimage"
        android:padding="5dp" />

    <TextView
        android:id="@+id/orderDateView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:layout_alignLeft="@id/textView13"

        android:text="Button" />

    <TextView
        android:id="@+id/orderUserView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderDateView"
        android:layout_marginLeft="-125dp"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@+id/textView14"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/orderImgLayout"
        android:text="Order was made on:" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-126dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/textView13"
        android:text="Order was made by:" />

</RelativeLayout>
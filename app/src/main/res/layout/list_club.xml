<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/RelativeLayout"
        android:layout_width="0dp"
        android:layout_height="178dp"
        android:layout_marginEnd="13dp"
        android:contentDescription="Club Image"
        app:layout_constraintEnd_toStartOf="@+id/club_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/club_name"
        android:layout_width="153dp"
        android:layout_height="32dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="1dp"
        android:hint="Club Name"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/club_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/RelativeLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/club_details"
        android:layout_width="221dp"
        android:layout_height="0dp"
        android:layout_marginBottom="558dp"
        android:hint="club details"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/club_name"
        app:layout_constraintTop_toBottomOf="@+id/club_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
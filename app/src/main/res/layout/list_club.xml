<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/club_img"
        android:layout_width="177dp"
        android:layout_height="168dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/club_name"
        android:layout_width="160dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="56dp"
        android:hint="club names"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/club_img" />

    <TextView
        android:id="@+id/club_details"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_marginEnd="9dp"
        android:hint="club details"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/club_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/club_name" />
</androidx.constraintlayout.widget.ConstraintLayout>